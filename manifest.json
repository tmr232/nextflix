{
    "manifest_version": 3,
    "name": "Nextflix",
    "version": "1.3",
  
    "description": "Adds a next-episode hotkey for Netflix",
    "homepage_url": "https://github.com/tmr232/nextflix",

    "icons": {
      "48": "icon48.png",
      "96": "icon96.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "nextflix@tamir.dev-gvse4nthsby8n9s"
      }
    },
    
    
  
    "content_scripts": [
      {
        "matches": ["*://*.netflix.com/*"],
        "js": ["nextflix.js"]
      }
    ],

    "host_permissions": ["*://*.netflix.com/*"]      
  }
  